{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "dist",
    "lib": ["es2018", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules/*", "**/node_modules/*", "**/*.spec.ts", "dist"]
}
